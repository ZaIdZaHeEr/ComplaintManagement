<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="2dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvComplaintId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#CMP-2024"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:background="#F3E5F5"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textSize="12sp" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 03, 2026"
                android:textColor="#9E9E9E"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvComplaintTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WiFi Router Not Working"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category: Technical Support"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@android:drawable/presence_online"
                app:tint="@color/status_pending"/>
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending Approval"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/status_pending"
                android:layout_marginStart="8dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIGH PRIORITY"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/priority_high"
                android:letterSpacing="0.05"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>